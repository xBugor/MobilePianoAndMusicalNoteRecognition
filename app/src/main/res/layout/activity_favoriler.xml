<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5BC8CD"
    android:orientation="vertical">

    <!-- Üst üste gelecek öğeler için FrameLayout kullanıyoruz -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="0dp">

        <!-- Arka plandaki TextView -->
        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#56007291"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="2"
            android:text="FAVORİLER"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back1Button2"
            android:layout_width="55dp"
            android:layout_height="49dp"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="5dp"
            android:background="#00000000"
            app:srcCompat="@drawable/back_to" />
    </FrameLayout>

    <!-- Ayrım Çizgisi -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <!-- Şarkı Listesi RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSongs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>
