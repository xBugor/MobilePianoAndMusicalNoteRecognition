<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka Plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#CCCCCC" />
        </shape>
    </item>

    <!-- İlerleme Çubuğu -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="25dp" />
                <gradient
                    android:startColor="#99B5B6"
                    android:endColor="#00BCD4"
                    android:angle="0" />
            </shape>
        </clip>
    </item>
</layer-list>
